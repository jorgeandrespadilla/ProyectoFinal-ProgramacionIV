@model ProyectoFinal.Web.ViewModels.ComentarioCreateViewModel

@{
    ViewBag.Title = "Crear Comentario";
}

<h2>Agregar comentario</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.SubastaId)
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.DescripcionComentario, "Comentario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 mt-2">
                @Html.TextAreaFor(model => model.DescripcionComentario, new { @class = "form-control", @rows = 6 })
                @Html.ValidationMessageFor(model => model.DescripcionComentario, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Volver", "Index", "Subastas", new { id = @Model.SubastaId }, new { @class="btn btn-secondary" })
                <input type="submit" value="Enviar" class="btn btn-outline-primary mt-3 mb-2 ms-3" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
